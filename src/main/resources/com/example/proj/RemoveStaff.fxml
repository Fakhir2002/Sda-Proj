<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #014D4E;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proj.RemoveStaffController">
    <children>
        <Label layoutX="222.0" layoutY="27.0" text="Remove Staff" textFill="WHITE">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
            <effect>
                <Bloom />
            </effect>
        </Label>
        <Text fill="WHITE" layoutX="82.0" layoutY="133.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Staff ID to remove">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Text>
        <Button fx:id="remm" onAction="#handleRemoveStaff" layoutX="244.0" layoutY="187.0" mnemonicParsing="false" text="Remove" />
        <Button fx:id="staffback" layoutX="370.0" layoutY="187.0" mnemonicParsing="false" onAction="#handlestaffback" text="Back" />
      <ComboBox fx:id="removestaffcombobox" layoutX="261.0" layoutY="115.0" prefWidth="150.0" />
    </children>
</AnchorPane>
